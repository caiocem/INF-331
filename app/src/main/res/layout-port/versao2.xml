<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextNumberDecimal"
            android:layout_width="305dp"
            android:layout_height="63dp"
            android:layout_below="@+id/Div"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-400dp"
            android:ems="10"
            android:text=""
            android:editable="false"
            />

        <RelativeLayout
            android:id="@+id/Div"
            android:layout_width="305dp"
            android:layout_height="290dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:text="7"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/button1"
                android:layout_toRightOf="@+id/button1"
                android:layout_alignTop="@id/button1"
                android:textSize="25sp"
                android:text="8"
                android:onClick="addtext" />

            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                android:layout_alignTop="@id/button2"
                android:text="9"
                android:textSize="25sp"
                android:onClick="addtext"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/button3"
                android:layout_toRightOf="@+id/button3"
                android:layout_alignTop="@id/button3"
                android:textSize="25sp"
                android:text="/"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/button4"
                android:layout_toRightOf="@+id/button4"
                android:layout_alignTop="@id/button4"
                android:textSize="20sp"
                android:text="&lt;&lt;"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/button1"
                android:layout_alignLeft="@id/button1"
                android:text="4"
                android:textSize="25sp"
                android:layout_alignStart="@id/button1"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button6"
                android:layout_below="@id/button2"
                android:layout_alignLeft="@id/button2"
                android:text="5"
                android:textSize="25sp"
                android:layout_alignStart="@id/button2"
                android:layout_toEndOf="@id/button6"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button7"
                android:layout_below="@id/button3"
                android:layout_alignLeft="@id/button3"
                android:text="6"
                android:textSize="25sp"
                android:layout_alignStart="@id/button3"
                android:layout_toEndOf="@id/button7"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button8"
                android:layout_below="@id/button4"
                android:layout_alignLeft="@id/button4"
                android:text="x"
                android:textSize="25sp"
                android:layout_alignStart="@id/button4"
                android:layout_toEndOf="@id/button8"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button9"
                android:layout_below="@id/button5"
                android:layout_alignLeft="@id/button5"
                android:text="C"
                android:textSize="25sp"
                android:layout_alignStart="@id/button5"
                android:layout_toEndOf="@id/button9"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/button6"
                android:layout_alignLeft="@id/button6"
                android:textSize="25sp"
                android:text="1"
                android:layout_alignStart="@id/button6"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button11"
                android:layout_below="@id/button7"
                android:layout_alignLeft="@id/button7"
                android:textSize="25sp"
                android:text="2"
                android:layout_alignStart="@id/button7"
                android:layout_toEndOf="@id/button11"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button12"
                android:layout_below="@id/button8"
                android:layout_alignLeft="@id/button8"
                android:textSize="25sp"
                android:text="3"
                android:layout_alignStart="@id/button8"
                android:layout_toEndOf="@id/button12"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button13"
                android:layout_below="@id/button9"
                android:layout_alignLeft="@id/button9"
                android:text="-"
                android:textSize="25sp"
                android:layout_alignStart="@id/button9"
                android:layout_toEndOf="@id/button13"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button15"
                android:layout_width="50dp"
                android:layout_height="115dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button14"
                android:layout_below="@id/button10"
                android:layout_alignLeft="@id/button10"
                android:text="="
                android:textSize="25sp"
                android:layout_alignStart="@id/button10"
                android:layout_toEndOf="@id/button14"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button16"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/button11"
                android:layout_alignLeft="@id/button11"
                android:text="0"
                android:textSize="25sp"
                android:layout_alignStart="@id/button11"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button17"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button16"
                android:layout_below="@id/button13"
                android:layout_alignLeft="@id/button13"
                android:textSize="25sp"
                android:text="."
                android:layout_alignStart="@id/button13"
                android:layout_toEndOf="@id/button16"
                android:onClick="addtext"/>

            <Button
                android:id="@+id/button18"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/button17"
                android:layout_below="@id/button14"
                android:layout_alignLeft="@id/button14"
                android:textSize="25sp"
                android:text="+"
                android:layout_alignStart="@id/button14"
                android:layout_toEndOf="@id/button17"
                android:onClick="addtext"/>

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>