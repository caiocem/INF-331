<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="304dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:text="@string/escolha_a_vers_o_desejada"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/ver1"
        android:tag="ver1"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="100dp"
        android:onClick="Versoes"
        android:text="@string/vers_o_1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/text"
        app:layout_constraintRight_toLeftOf="@+id/ver2" />

    <Button
        android:id="@+id/ver2"
        android:tag="ver2"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:onClick="Versoes"
        android:text="@string/vers_o_2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintRight_toRightOf="@+id/text"
        tools:layout_editor_absoluteX="228dp" />

</androidx.constraintlayout.widget.ConstraintLayout>